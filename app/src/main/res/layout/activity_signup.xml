<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <!-- Ícone de seta para voltar, fixo no topo -->
    <ImageView
        android:id="@+id/btnVoltar"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_arrow_back"
        android:tint="#D9D9D9"
        android:layout_marginTop="32dp"
        android:layout_marginStart="24dp"
        android:layout_gravity="start"
        android:contentDescription="Voltar"
        android:clickable="true"
        android:focusable="true"
        android:elevation="8dp"/>

    <!-- ScrollView com padding top para não cobrir a seta -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="80dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp">

        <!-- Quadrado da frente com campos de cadastro -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/background_rounded"
            android:elevation="4dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="32dp">

            <!-- Título do cadastro -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:text="Cadastro"
                android:textColor="#1F1877"
                android:textSize="40sp"
                android:textStyle="bold"/>

            <!-- Nome -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="16dp"
                android:text="Nome"
                android:textColor="#1F1877"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/editNome"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edittext_background"
                android:fontFamily="@font/montserrat_regular"
                android:hint="Digite seu nome"
                android:inputType="textPersonName"
                android:padding="16dp"
                android:textColor="#1F1877"
                android:textSize="16sp"/>

            <!-- Email -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="0dp"
                android:text="Email"
                android:textColor="#1F1877"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/editEmail"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edittext_background"
                android:fontFamily="@font/montserrat_regular"
                android:hint="Digite seu email"
                android:inputType="textEmailAddress"
                android:padding="16dp"
                android:textColor="#1F1877"
                android:textSize="16sp"/>

            <!-- Senha -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="0dp"
                android:text="Senha"
                android:textColor="#1F1877"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/editSenha"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edittext_background"
                android:fontFamily="@font/montserrat_regular"
                android:hint="Digite sua senha"
                android:inputType="textPassword"
                android:padding="16dp"
                android:textColor="#1F1877"
                android:textSize="16sp"/>

            <!-- Confirmação de Senha -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="0dp"
                android:text="Confirme a senha"
                android:textColor="#1F1877"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/editConfirmarSenha"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edittext_background"
                android:fontFamily="@font/montserrat_regular"
                android:hint="Confirme sua senha"
                android:inputType="textPassword"
                android:padding="16dp"
                android:textColor="#1F1877"
                android:textSize="16sp"/>

            <!-- Botão de Cadastro -->
            <Button
                android:id="@+id/btnCadastrar"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/button_secondary"
                android:fontFamily="@font/montserrat_extrabold"
                android:text="Cadastrar"
                android:textColor="#FFFEFE"
                android:textSize="24sp"
                android:textAllCaps="false"/>

            <!-- Link para o login -->
            <TextView
                android:id="@+id/tvLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/montserrat_medium"
                android:foreground="?attr/selectableItemBackground"
                android:onClick="navigateToLogin"
                android:text="Já tem uma conta? Faça login"
                android:textColor="#1F1877"
                android:textSize="15sp"/>
        </LinearLayout>
    </ScrollView>

    <!-- Mascote -->
    <ImageView
        android:id="@+id/mascoteImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/mascote"
        android:layout_gravity="top|end"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="Mascote do projeto"
        android:tint="#D9D9D9"/>
</FrameLayout>
